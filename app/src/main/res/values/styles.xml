<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainText">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/inkDark</item>
        <item name="font">@font/rubik</item>
    </style>

    <style name="dictionaryOrange">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryOrange</item>
        <item name="font">@font/rubik</item>
    </style>


    <style name="subText">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/inkDark</item>
        <item name="font">@font/rubik</item>
    </style>

    <style name="mainBtn">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="font">@font/rubik</item>
    </style>

    <style name="Widget.WordsFactory.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.WordsFactory.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>